{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1>Contactez-nous</h1>

        {{ form_start(contactForm) }}
            <div class="mb-3">
                {{ form_label(contactForm.name) }}
                {{ form_widget(contactForm.name, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(contactForm.email) }}
                {{ form_widget(contactForm.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(contactForm.subject) }}
                {{ form_widget(contactForm.subject, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(contactForm.message) }}
                {{ form_widget(contactForm.message, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
            </div>
            <div>
                {{ form_widget(contactForm.send, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        {{ form_end(contactForm) }}
    </div>
{% endblock %}
