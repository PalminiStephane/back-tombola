{% extends 'base.html.twig' %}

{% block title %}Gestion des Tombolas{% endblock %}

{% block body %}
<div class="container mt-5">
    <a href="{{ path('app_backoffice_draws_new') }}" class="btn btn-success mt-3">
        <i class="fas fa-plus"></i> Créer une nouvelle tombola
    </a>
    <h2 class="text-center mb-4">Gestion des Tombolas</h2>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Date de Tirage</th>
                <th>Prix du Ticket</th>
                <th>Tickets Disponibles</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for draw in draws %}
            <tr>
                <td>{{ draw.id }}</td>
                <td>{{ draw.title }}</td>
                <td>{{ draw.description }}</td>
                <td>{{ draw.drawDate ? draw.drawDate|date('d/m/Y') : 'N/A' }}</td>
                <td>{{ draw.ticketPrice }}</td>
                <td>{{ draw.ticketsAvailable }}</td>
                <td>{{ draw.status }}</td>
                <td>
                    <a href="{{ path('app_backoffice_draws_show', {'id': draw.id}) }}" class="btn btn-info btn-sm">Voir</a>
                    <a href="{{ path('app_backoffice_draws_edit', {'id': draw.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    <a href="{{ path('app_backoffice_draws_delete', {'id': draw.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette tombola?');">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8" class="text-center">Aucune tombola trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_backoffice_draws_new') }}" class="btn btn-success mt-3">Créer une nouvelle tombola</a>
</div>
{% endblock %}
